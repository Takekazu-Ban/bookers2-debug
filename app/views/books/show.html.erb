
<div class="row">
<div class="col-xs-3">

	<h2>User info</h2>
	<%= render 'users/profile', user: @book.user%>

	<h2>New book</h2>
	<%= form_for(@nil, url: '/books', method: :post) do |f| %>
		<div class="field row">
			<%= f.label :title %>
			<%= f.text_field :title, class: "col-xs-12 book_title" %>
		</div>

		<div class="field row">
			<%= f.label :body %> <!-- ここを変更 -->
			<%= f.text_area :body, class: "col-xs-12 book_body" %>
		</div>

		<div class="actions row">
			<%= f.submit class: "btn btn-primary col-xs-12" %>
		</div>
<% end %>

</div>

<div class="col-xs-9">
	<h2>Book detail</h2>

	<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>

				<!-- いいね機能追加 -->
				<% if @book.favorited_by?(current_user) %>
  					<td>
    					<%= link_to book_favorites_path(@book), method: :delete do %>
      					<i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
      					<%= @book.favorites.count %>
    					<% end %>



  					</td>
					<% else %>
  					<td>
    					<%= link_to "/books/#{@book.id}/favorites", method: :post do %>
      					<i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>

      					<%= @book.favorites.count %>
    					<% end %>
  					</td>
				<% end %>

				<!-- コメント件数表示 -->
				<td>
					<i class="fa fa-comment"></i>
					<a href="#comments">コメント数：<%= @book.book_comments.count %></a>
				</td>

				<% if @book.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
			</tr>
		</table>

		<!-- コメント入力フォーム -->
		<%= form_for(@book_comment) do |f| %>
			<%= f.text_area :comment, class: "comment" %>
			<%= f.submit "送信" %>
		<% end %>
</div>
</div>


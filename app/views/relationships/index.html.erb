<!-- <<フォロー 一覧>> -->
<h2>Follow Users</h2>
<!--follower一覧 -->
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><%= attachment_image_tag(user.followings, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
			<td><%= user.followings.name%></td>

			<td>フォロー数：<%= user.followings.count %></td>
			<td>フォロワー数：<%= user.followers.count %></td>
			<td><%= link_to "フォローを外す", "relationships_path(current_user.id)" %></td>
			</td>
			<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
		</tr>
	</tbody>
</table>
<!--follower一覧 -->

